<h1>Last issues</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= link_to issue.name, issue_url_with_subdomain(issue) %></td>
    <td><%= issue.description %></td>
    <td><% if can?(:edit, issue) %><%= link_to 'Edit', edit_issue_path(issue) %><% end %></td>
    <td><% if can?(:destroy, issue) %><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
